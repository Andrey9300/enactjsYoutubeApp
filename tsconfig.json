{
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "removeComments": true,
    "noImplicitAny": false, // вернуть true
    "esModuleInterop": true,
    "target": "ES5",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2015",
      "es2016",
      "es2017",
      "es2018"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ],
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "declaration": false,
    "sourceMap": true,
    "pretty": true,
  },
  "include": [
    "src",
    "types"
  ]
}
